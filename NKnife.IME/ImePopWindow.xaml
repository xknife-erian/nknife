<Window x:Class="NKnife.IME.ImePopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">
        <InkCanvas Name="InkCanvas" HorizontalAlignment="Left" Height="249" Margin="10,61,0,0" VerticalAlignment="Top" Width="497" MouseUp="InkCanvas_MouseUp">
            <InkCanvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFDC9C9" Offset="0"/>
                    <GradientStop Color="#FFFBE1E1" Offset="1"/>
                </LinearGradientBrush>
            </InkCanvas.Background>
        </InkCanvas>
        <TextBox Name="TextBox" HorizontalAlignment="Left" Height="46" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFAEC6FB" Offset="0"/>
                    <GradientStop Color="#FFE3EBFD" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>
