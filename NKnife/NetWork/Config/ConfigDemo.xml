<?xml version="1.0" encoding="utf-8" ?>
<options>
  <!--服务器端-->
  <option class="Pansoft.CQMS.Queue.Core.Config.QMasterAsynCoderSetting">
    <!--IP 或 HOST, any表示绑定所有本地IP-->
    <Host>any</Host>
    <!--端口-->
    <Port>11917</Port>
    <!--数据包最大缓冲区-->
    <MaxBufferSize>8192</MaxBufferSize>
    <!--最大连接数,按实际情况而设,太大内存占用太多,太小连接不够用,最大可以设置5-10万-->
    <MaxConnectCount>12</MaxConnectCount>
    <!--心跳间隔-->
    <heartRange>20000</heartRange>
    <!--命令字提取工具-->
    <IDatagramCommandParser>Gean.Net.Protocol.General.GeneralDatagramCommandParser</IDatagramCommandParser>
    <!--解码器，字节->字符串-->
    <IDatagramDecoder>Gean.Net.Protocol.General.Byte4Decoder</IDatagramDecoder>
    <!--组码器，字符串->字节-->
    <IDatagramEncoder>Gean.Net.Protocol.General.Byte4Encoder</IDatagramEncoder>
  </option>
  
  <!--客户端-->
  <option class="Pansoft.CQMS.Queue.Core.Config.QSlaveAsynCoderSetting">
    <!--心跳间隔-->
    <HeartRange>20000</HeartRange>
    <!--缓存区大小-->
    <BufferSize>8192</BufferSize>
    <!--同步的发送与接收的超时-->
    <Timeout>5000</Timeout>
    <!--命令字提取工具-->
    <IDatagramCommandParser>Gean.Net.Protocol.General.GeneralDatagramCommandParser</IDatagramCommandParser>
    <!--解码器，字节->字符串-->
    <IDatagramDecoder>Gean.Net.Protocol.General.Byte4Decoder</IDatagramDecoder>
    <!--组码器，字符串->字节-->
    <IDatagramEncoder>Gean.Net.Protocol.General.Byte4Encoder</IDatagramEncoder>
  </option>
</options>