<UserControl x:Class="NKnife.GUI.Wpf.DownButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Image Margin="0" Name="imageBtnBack" MouseUp="imageBtnBack_MouseUp" />
        <Image Margin="0" Name="imageBtnFront" IsHitTestVisible="False" />
        <Label Margin="0,0,0,0" Name="labelCounter" IsHitTestVisible="False"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Foreground="Red" FontSize="26" Visibility="Hidden">
            0
        </Label>
    </Grid>
</UserControl>